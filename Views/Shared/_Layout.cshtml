<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PanaderiaCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/panaderia.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-brown-light py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="brand">
                <h1 class="text-white">PanaderiaCore</h1>
            </div>
            <div class="user-info">
                <span class="text-white">Hola, @User.Identity.Name</span>
                <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Salir</a>
            </div>
        </div>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-brown-dark text-white text-center py-3">
        <p>&copy; 2024 PanaderiaCore - Todos los derechos reservados.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
