@model IEnumerable<PanaderiaCore.Models.Inventario>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-brown">Gestión de Inventarios</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="mb-3">
        <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-primary">Volver al Dashboard</a>
        <a asp-action="ReabastecimientosPorRango" asp-controller="Inventario" class="btn btn-secondary">Consultar Reabastecimientos</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad Disponible</th>
                <th>Última Actualización</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductoNombre</td>
                    <td>@item.CantidadDisponible</td>
                    <td>@item.UltimaActualizacion.ToString("g")</td>
                    <td>
                        <a asp-action="EditInventario" asp-route-id="@item.ProductoNombre" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-primary {
        background-color: #3498db;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-brown {
        color: #6B4423;
    }
</style>