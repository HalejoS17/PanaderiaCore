@model IEnumerable<PanaderiaCore.Models.Producto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestión de Productos</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Agregar Producto</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Categoria</td>
                <td>@producto.Descripcion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@producto.Nombre" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@producto.Nombre" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producto.Nombre" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Volver al Dashboard</a>
